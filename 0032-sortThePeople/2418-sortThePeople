class Solution {
    public String[] sortPeople(String[] names, int[] heights) {
        int tempHeight;
        String tempName ;
        for(int i=0 ; i<heights.length -1 ;i++){
            for(int j=i+1 ; j<heights.length ; j++){
               if(heights[i]<heights[j]){
                    tempHeight = heights[i];
                    tempName = names[i];
                    heights[i] = heights[j];
                    names[i] = names[j];
                    heights[j] = tempHeight ;
                    names[j] = tempName;
                }
            }
        }
        return names;
    }
}
