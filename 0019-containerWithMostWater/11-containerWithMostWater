class Solution {
    public int maxArea(int[] height) {
        int maxVolume = 0;
        int volume = 0;
        int h, w; // h = height of shape , w = width of shape;
        int i, j;
        for (i = 0; i < height.length - 1; i++) {
            for (j = i + 1; j < height.length; j++) {
                // choose the shortest line
                h = (height[i] < height[j]) ? height[i] : height[j];
                // width is the difference between the lines
                w = j - i;
                volume = h * w;
                if (volume > maxVolume) {
                    maxVolume = volume;
                }
            }
        }
        return maxVolume;
    }
}
